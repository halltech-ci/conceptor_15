<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="inherit_report_purchaseorder_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <h4 class="text-center">
                        <t t-if="o.state in ['sent', 'to approve']" style="color: #cb2020;">DEMANDE DE COTATION N°: <span t-field="o.name"/></t>
                        <t t-if="o.state in ['purchase', 'done']" style="color: #cb2020;">BON DE COMMANDE N°: <span t-field="o.name"/></t>
                        <t t-if="o.state == 'cancel'">(ANNULE) BON DE COMMANDE N°: <span t-field="o.name"/></t>
                    </h4>
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <td class="text-left">Date : 
                                    <t t-if="o.state in ['purchase','done'] and o.date_approve">
                                        <span t-esc="o.date_approve.date()"/>
                                    </t>
                                </td>
                                <td class="text-right"><strong>Fournisseur : <span t-esc="o.partner_id.name"/></strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row"/>
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th name="th_projet"><strong>Projet</strong></th>
                            <th name="th_description"><strong>Description</strong></th>
                            <th name="th_description"><strong>Caractéristiques</strong></th>
                            <th name="th_quantity" class="text-right"><strong>Qté</strong></th>
                            <th name="th_unit" class="text-right"><strong>Unité</strong></th>
                            <th name="th_price_unit" class="text-right"><strong>Prix Unitaire</strong></th>
                            <th name="th_amount" class="text-right"><strong>Total</strong></th>
                        </tr>
                    </thead>
                </table>
                
                </div>
            </t>
            <!-- Replacing information-->
    
            
        </template>
        
        <record id="report_purchase_order_custom" model="ir.actions.report">
            <field name="name">Bon de commande</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">purchase.inherit_report_purchaseorder_document</field>
            <field name="report_file">purchase.inherit_report_purchaseorder_document</field>
            <field name="print_report_name">'Bon de commande N°: - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_purchase_order"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>